<% include header %>

<div class="jumbotron">
  <h1>Update Articles</h1> 
  <div class="row">
    <div class="col-sm-12">
     <form action="/articleUpdate/<%= articleData._id%>" method="POST">  
        <div class="form-group">
          <label for="title">Title:</label>
          <input type="text" class="form-control" id="title" name="title" value="<%= articleData.title%>">
        </div>
        <div class="form-group">
          <label for="content">Content:</label>
          <textarea rows="5" class="form-control" cols="8" name="content"><%= articleData.content%></textarea>
        </div>
        <input type="hidden" name="articleId" value="<%= articleData._id%>" />
        <button type="submit" class="btn btn-primary">Update</button>
      </form> 
    </div>
  </div>
</div>
</div>

<% include footer %>